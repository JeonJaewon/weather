<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frag_home_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

<!--    <include layout="@layout/main_toolbar"/>-->


    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:background="#6886c5"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/location_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:text="New York" />
            <TextView
                android:id="@+id/date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginRight="40dp"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:text="2020 06 16"/>

            <ImageView
                android:id="@+id/weather_icon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="60dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/date_text"
                app:srcCompat="@drawable/sun"/>

            <TextView
                android:id="@+id/t3h_text"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:textSize="40sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/weather_icon"
                android:text="온도" />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_below="@id/weather_icon"
                android:layout_toRightOf="@id/t3h_text"
                android:src="@drawable/celsius"/>
            <fragment
                android:id="@+id/cloth_card"
                tools:layout="@layout/fragment_card"
                android:layout_height="100dp"
                android:layout_width="match_parent"
                android:layout_marginTop="70dp"
                android:layout_marginHorizontal="30dp"
                android:name="com.example.weather_rabbit.CardFragment"
                android:layout_below="@id/t3h_text">
            </fragment>
        </RelativeLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</LinearLayout>
